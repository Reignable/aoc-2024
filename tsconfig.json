{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@utils": [
        "utils/index.ts"
      ],
      "@types": [
        "types/index.ts"
      ],
      "@api": [
        "api/index.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.txt"
  ]
}